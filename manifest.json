{
  "manifest_version": 3,
  "name": "Outlook AI Assistant (Direct Buttons)",
  "version": "1",
  "description": "Adds AI buttons directly into the Outlook compose window.",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://outlook.live.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://outlook.live.com/*",
        "https://outlook.office.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "action": {
    "default_title": "AI Email Assistant"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
